{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "init": "yarn faency:build",
    "start": "npm-run-all --parallel faency faency:storybook website",
    "website": "lerna exec --scope website -- npm start",
    "website:build": "lerna exec --scope website -- npm build",
    "faency": "lerna exec --scope @containous/faency -- yarn run watch",
    "faency:storybook": "lerna exec --scope @containous/faency -- yarn storybook",
    "faency:build": "lerna exec --scope @containous/faency -- yarn build",
    "build": "yarn faency:build && yarn website:build",
    "prettier": "prettier './**/*.{js,jsx,ts,tsx,json,yml,yaml,css,md,mdx}' --write",
    "lint": "eslint './packages/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix './packages/**/*.{js,jsx,ts,tsx}'",
    "clean": "yarn clean-logs && yarn clean-modules",
    "clean-logs": "rimraf ./packages/*/npm-debug* && rimraf ./*-debug*",
    "clean-modules": "rimraf ./packages/*/node_modules/ && rimraf ./node_modules/",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.11.0",
    "babel-eslint": "10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "rimraf": "^3.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{md,mdx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lerna exec --scope @containous/faency -- npm run build && npm run test"
    }
  }
}
